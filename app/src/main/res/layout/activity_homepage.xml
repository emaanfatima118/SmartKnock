<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homepage"
    android:background="#228CFC">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_black"
        android:text="SmartKnock"
        android:layout_centerHorizontal="true"
        android:textColor="#228CFC"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Devices"
        android:layout_marginStart="20dp"
        android:layout_below="@id/header_title"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/device_data"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/header_title"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/button_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MyDoorbell"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(device id)"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:src="@drawable/homeblue"
                android:background="@color/white"
                android:importantForAccessibility="no"
                android:layout_marginStart="10dp"/>


        <ImageButton
            android:id="@+id/visitorButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/doorbell"
            android:background="@color/white"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:id="@+id/feedbackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/feedback"
            android:contentDescription="@null"
            android:background="@color/white"
            android:importantForAccessibility="no"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:id="@+id/helpcenterButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:src="@drawable/helpcenter"
            android:background="@color/white"
            android:importantForAccessibility="no"
            android:layout_marginStart="10dp"/>
            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/settings"
                android:background="@color/white"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                android:layout_marginStart="10dp"
                />

        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:src="@drawable/logout"
            android:background="@color/white"
            android:importantForAccessibility="no"
            android:layout_marginStart="10dp"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
