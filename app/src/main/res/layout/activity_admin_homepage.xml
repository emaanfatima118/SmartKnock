<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#228CFC"
    android:id="@+id/home">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_black"
        android:text="SmartKnock"
        android:layout_centerHorizontal="true"
        android:textColor="#228CFC"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/device_data"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/header_title"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/button_background"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/button_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/device_data"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/addUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/removeUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove User" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/settings"
            android:background="@color/white"
            android:contentDescription="@null"
            android:layout_marginStart="350dp"
            android:importantForAccessibility="no"
            />


        <ImageButton
            android:id="@+id/feedbackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="215dp"
            android:src="@drawable/feedback"
            android:contentDescription="@null"
            android:background="@color/white"
            android:importantForAccessibility="no"/>


        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:contentDescription="@null"
            android:src="@drawable/home"
            android:background="@color/white"
            android:importantForAccessibility="no"/>
    </FrameLayout>

</RelativeLayout>
