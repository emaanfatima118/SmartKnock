<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#228CFC">
<!--    tools:context=".setdev"-->


    <EditText
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Device ID"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:textColorHint="#98090909"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/locklogin"
        android:drawablePadding="15dp"
        android:textColor="@color/black"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Set Device PIN"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColorHint="#98090909"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/locklogin"
        android:drawablePadding="15dp"
        android:textColor="@color/black"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/box1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/associateButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Associate Device"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/box2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
